<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffcee2ff">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Settings"
            android:id="@+id/txtLabel"
            android:layout_gravity="center_horizontal"
            android:background="#ff1a42c8"
            android:typeface="monospace"
            android:textSize="30dp"
            android:textColor="#ffffffff"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"/>



    <View android:layout_width="325dp"
          android:layout_height="3dip"
          android:paddingBottom="10dip"
          android:background="#ff000dff"
          android:id="@+id/view2"
          android:layout_marginTop="98dp" android:layout_below="@+id/txtLabel" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set Radius"
            android:id="@+id/textView"
            android:layout_marginBottom="26dp"
            android:textColor="#ff000000" android:layout_alignBottom="@+id/view2"
            android:layout_alignLeft="@+id/view2"/>

</RelativeLayout>